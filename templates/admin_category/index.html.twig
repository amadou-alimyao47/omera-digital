{% extends 'base_admin.html.twig' %}

{% block title %}Omera Articles Categories !{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-2">
      {% include 'admin/_sidebar.html.twig' %}
    </div>
    <div class="col-md-10">
      {% include 'inc/_flash_info.html.twig' %}
      <a href="{{ path("admin_category_new") }}" class="btn btn-primary">Nouveau</a>
      <table class="table table-striped table-bordered">
        <thead class="bg-danger">
          <tr>
            <th>Nom</th>
            <th>Nombre d'article</th>
            <th>Nombre de projet</th>
            <th class="w-25">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for category in categories %}
              <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.articles|length }}</td>
                <td>{{ category.projects|length }}</td>
                <td>
                    <a href="{{ path("admin_category_update", {id: category.id })}}" class="btn btn-warning">Editer</a>
                    {% include 'admin/_delete_form.html.twig' with {entity: category} only %}

                </td>
              </tr>
          {% endfor %}
        </tbody>
      </table>
      {% if previous >= 0 %}
           <a href="{{ path('admin_category_list', {p: previous }) }}" class="btn btn-primary" >Prev</a>
        {% endif %}
       {% if next < categories|length %}
            <a href="{{ path('admin_category_list', {p: next }) }}" class="btn btn-primary" >Next</a>
       {% endif %}
    </div>
    </div>
  </div>
{% endblock %}
