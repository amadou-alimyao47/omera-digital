<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/style.css">
        <script type="text/javascript" src="/js.js">

        </script>
        {% block stylesheets %}

      {% endblock %}

        {% block javascripts %}{% endblock %}
    </head>
    <body>
      <nav class="navbar navbar-expand-lg navbar-white bg-white ">
        <a class="navbar-brand " href="#">Omera Digital</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse row" id="navbarColor01">
          <ul class="navbar-nav ml-auto col-6 text-dark">
            <li class="nav-item active">
              <a class="nav-link" href="{{ path('omera_index') }}">Home
                <span class="sr-only"></span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('omera_about_us') }}">ABOUT US</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('omera_works') }}">WORKS</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('omera_service_index') }}">Service</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('blog_index') }}">Blog</a>
            </li>

            <li class="nav-item">
              <form class="" action="" method="post" class="form-inline" style="display: inline">
                <input type="text" name="search" value="">
              </form>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-danger" href="{{ path('omera_contact_us') }}">ADD YOUR PROJECT</a>
            </li>
          </ul>
          <span class="col-6">
            {% if not app.user %}
              <a href="{{ path('app_login') }}" class="btn btn-primary">Sign in</a>
              <a href="{{ path('user_sign_up') }}" class="btn btn-primary">Sign Up</a>
            {% else %}
              <a href="{{ path('app_logout') }}" class="btn btn-primary">Sign out</a>
            {% endif %}
          </span>
        </div>
      </nav>
        
          {% block body %}{% endblock %}

        <footer>
          <div class="row mt-5">
            <div class="col-md-3">
              <img src="" alt="omear-logo">
            </div>
            <div class="col-md-3">
              <h2>COMPANY</h2>
              <ul>
                <li> <a href="{{ path('omera_about_us') }}">About us</a> </li>
                <li> <a href="{{ path('omera_works') }}">Work</a></li>
                <li> <a href="{{ path('omera_team') }}">Team</a> </li>
                <li><a href="{{ path('omera_contact_us') }}">Contact</a></li>
              </ul>
            </div>
            <div class="col-md-3">
              <h2>SERVICES</h2>
              <ul>
                <li> <a href="{{ path('omera_service_digital_media') }}">Digital Media</a> </li>
                <li><a href="{{ path('omera_service_creative_design') }}">Creative Design</a></li>
                <li><a href="{{ path('omera_service_development') }}">Development</a></li>
                <li><a href="{{ path('omera_service_branding_strategy') }}">Branding Strategy</a></li>
              </ul>
            </div>
            <div class="col-md-3">
              <h2>GET OUR STAFF</h2>
              <form class="" action="{{ path('omera_add_to_news_letter')}}" method="post">
                {% for message in app.flashes("notice_newsletter_error") %}
                        <div class="alert alert-danger text-center">
                          {{ message }}
                        </div>
                {% endfor %}
                <input type="email" name="newsLetter" value="" placeholder="Your Email">
                <input type="hidden" name="_token" value="{{ csrf_token('news_letter') }}">
              </form>
            </div>
          </div>
        </footer>
    </body>
</html>
