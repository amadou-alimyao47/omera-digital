{% extends 'base_admin.html.twig' %}

{% block body %}
    <div class="row">
      <div class="col-md-2">
        {% include 'admin/_sidebar.html.twig' %}
      </div>
      <div class="col-md-10">
          {% include 'inc/_flash_info.html.twig' %}
          <table class="table table-striped table-bordered">
            <thead class="bg-danger">
              <tr>
                <th>Photo</th>
                <th>fullname</th>
              </tr>
            </thead>
            <tbody>
              {% for user in users %}
                  <tr>
                    <td> <img src="/uploads/img/user/{{ user.photo }}" alt="{{ user.photo }}" class="img-fuild" width="50px"> </td>
                    <td>{{ user.fullname }}</td>
                  </tr>
              {% endfor %}
            </tbody>
          </table>
          {% if previous >= 0 %}
               <a href="{{ path('admin_user_list', {p: previous }) }}" class="btn btn-primary" >Prev</a>
            {% endif %}
           {% if next < users|length %}
                <a href="{{ path('admin_user_list', {p: next }) }}" class="btn btn-primary" >Next</a>
           {% endif %}

      </div>
    </div>
{% endblock %}
